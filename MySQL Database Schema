-- Users Table
CREATE TABLE Users (
    userID INT AUTO_INCREMENT PRIMARY KEY,
    firstName VARCHAR(50),
    lastName VARCHAR(50),
    email VARCHAR(100) UNIQUE,
    passwordHash VARCHAR(255), -- Storing hashed password for security
    dateJoined TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- Transactions Table
CREATE TABLE Transactions (
    transactionID INT AUTO_INCREMENT PRIMARY KEY,
    userID INT,
    description VARCHAR(255),
    amount DECIMAL(10, 2), -- Consider appropriate precision and scale for your currency
    transactionDate DATE,
    category VARCHAR(50),
    FOREIGN KEY (userID) REFERENCES Users(userID)
);

-- Budgets Table
CREATE TABLE Budgets (
    budgetID INT AUTO_INCREMENT PRIMARY KEY,
    userID INT,
    title VARCHAR(100),
    description VARCHAR(255),
    amount DECIMAL(10, 2),
    startDate DATE,
    endDate DATE,
    FOREIGN KEY (userID) REFERENCES Users(userID)
);

-- BudgetTransactionRelation Table (To link budgets with transactions)
CREATE TABLE BudgetTransactionRelation (
    budgetID INT,
    transactionID INT,
    PRIMARY KEY (budgetID, transactionID),
    FOREIGN KEY (budgetID) REFERENCES Budgets(budgetID),
    FOREIGN KEY (transactionID) REFERENCES Transactions(transactionID)
);

-- CreditCardRecommendations Table
CREATE TABLE CreditCardRecommendations (
    recommendationID INT AUTO_INCREMENT PRIMARY KEY,
    cardName VARCHAR(100),
    provider VARCHAR(100),
    benefits TEXT,
    annualFee DECIMAL(10, 2),
    link VARCHAR(255)
);
